/* pages/transactions/list.wxss */
.trans-list{
  padding: 30rpx 10rpx;
}
.trans-list .trans-list-item {
  margin: 20rpx 0;
  background-color: #FFFFFF;
  border-radius: 8rpx;
  overflow: hidden;
}
.trans-list .trans-list-item .status-icon{
  width:48rpx;
  height:48rpx;
  border-radius: 24rpx;
}
.trans-list .trans-list-item:first-child {
  margin-top:0;
}
.trans-list .trans-list-item .trans-list-item-hd{
  padding: 20rpx;
  display: flex;
  justify-content:space-between;
  align-items: center;
  transition: opacity .3s;
}
.trans-list .trans-list-item .trans-list-item-hd-show{
  opacity: 0.6;
}
.trans-list .trans-list-item .trans-list-item-bd{
  height: 0;
  overflow: hidden;
}
.trans-list .trans-list-item .trans-list-item-bd-show{
  height:auto;
}
.trans-list .trans-list-item .trans-list-item-bd .trans-detail-box{
  margin: 0 20rpx;
  opacity: 0;
  position: relative;
  background-color: #FFFFFF;
  line-height: 1.41176471;
  font-size: 34rpx;

  transform: translateY(-50%);
  transition: .3s;
}
.trans-list .trans-list-item .trans-list-item-bd .trans-detail-box-show {
  opacity: 1;
  transform: translateY(0);
}